<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 py-5">
      <h1 class="text-center">Creating category</h1>
    </div>
    <div class="col-12 col-md-6">
      <%= form_with(model: @category, local: true, html: { class: 'shadow p-3 border' }) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', aria: { describedby: 'category name' } , placeholder: 'sports' %>
        </div>
        <%= f.submit(class: 'btn btn-primary') %>
      <% end %>
    </div>
  </div>
</div>

