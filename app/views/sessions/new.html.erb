<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 py-5">
      <h1 class="text-center">Logging in</h1>
    </div>
    <div class="col-12 col-md-6">
      <%= form_with(scope: :credentials, url: login_path, local: true, html: { class: 'shadow p-3 border' }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', aria: { describedby: 'user email' } , placeholder: 'john.doe@example.org' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit('Login', class: 'btn btn-primary') %>
      <% end %>
    </div>
  </div>
</div>
